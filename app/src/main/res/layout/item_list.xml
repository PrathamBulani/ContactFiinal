<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_light_background"
    >
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/cardview_light_background"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/cardview_light_background"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/ibmessage"
                android:layout_toStartOf="@+id/ibmessage"
                android:text="PRATHAM"
                android:textColor="@color/cardview_dark_background"
                android:textSize="16sp"
                android:id="@+id/txtName"

                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtName"
                android:layout_toLeftOf="@+id/ibmessage"
                android:layout_toStartOf="@+id/ibmessage"
                android:textColor="#504F4F"
                android:text="9557788711"
                android:textSize="14sp"
                android:id="@+id/txtNumber"
                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ibcall"
                android:layout_width="38dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/ibmessage"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="#ffffff"
                android:src="@drawable/call" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ibmessage"
                android:layout_width="40dp"
                android:layout_height="37dp"
                android:layout_marginEnd="-2dp"
                android:layout_marginRight="-2dp"
                android:layout_toStartOf="@id/ibcall"
                android:layout_toLeftOf="@id/ibcall"
                android:background="#ffffff"


                android:src="@drawable/message" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>